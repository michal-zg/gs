<?xml version="1.0" encoding="utf-8"?>
<com.example.jacek.myapplication.EventItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dip">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:columnOrderPreserved="true"
        android:orientation="vertical"
        android:rowCount="4"
        android:rowOrderPreserved="true"
        android:textAlignment="center"
        android:useDefaultMargins="true">

        <TextView
            android:id="@+id/eventEditTextLabelDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="0"
            android:ems="10"
            android:inputType="datetime"
            android:text="2016-04-12 15:15" />

        <TextView
            android:id="@+id/eventTextViewLabelConfirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="pasuje"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ListView
            android:id="@+id/eventListViewConfirmed"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2" />


        <TextView
            android:id="@+id/eventTextViewLabelRejected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="niepasuje"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <ListView
            android:id="@+id/eventListViewRejected"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2" />

        <TextView
            android:id="@+id/eventTextViewLabelAnswerMissing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="brak odpowiedzi"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <ListView
            android:id="@+id/eventListViewAnswerMissing"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2" />

        <Button
            android:id="@+id/eventButtonConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="będę" />


        <Button
            android:id="@+id/eventButtonReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:text="NIE pasuje" />


    </GridLayout>


</com.example.jacek.myapplication.EventItemLayout>