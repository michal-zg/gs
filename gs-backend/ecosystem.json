{
  "apps": [
    {
      "name": "rest-api",
      "script": "main.ts"
    }
  ],
  "deploy": {
    "production-aws": {
      "key": "z:/game-scheduler.pem",
      "user": "ubuntu",
      "host": "ec2-52-57-120-91.eu-central-1.compute.amazonaws.com",
      "ref": "origin/master",
      "repo": "https://github.com/michal-zg/gs.git",
      "path": "/home/ubuntu/game-scheduler",
      "ssh_options": [
        "StrictHostKeyChecking=no",
        "PasswordAuthentication=no"
      ],
      "pre-deploy-local": "echo 'GS deploy start.'",
      "post-deploy": "cd /home/ubuntu/game-scheduler/current/gs-backend && sudo npm install && sudo pm2 install typescript && sudo pm2 startOrRestart --interpreter typescript ecosystem.json --env production-aws",
      "env": {
        "NODE_ENV": "production-aws",
        "rest_port": "3000",
        "mongodb": "mongodb://localhost:27017/game-scheduler"
      }
    }
  }
}